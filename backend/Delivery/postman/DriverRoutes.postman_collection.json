{
    "info": {
      "_postman_id": "e89b1abc-45de-6789-f012-3456driverapi",
      "name": "Cravely Driver Routes",
      "description": "Test collection for Cravely's driver API endpoints",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Get Driver Stats by Name",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "{{baseUrl}}/api/drivers/stats?name=John%20Doe",
            "host": ["{{baseUrl}}"],
            "path": ["api", "drivers", "stats"],
            "query": [
              {
                "key": "name",
                "value": "John Doe"
              }
            ]
          },
          "description": "Retrieve stats of a driver by their name"
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test(\"Status code is 200\", function () {",
                "    pm.response.to.have.status(200);",
                "});",
                "",
                "pm.test(\"Response has driver name\", function () {",
                "    const jsonData = pm.response.json();",
                "    pm.expect(jsonData.name).to.eql(\"John Doe\");",
                "});"
              ],
              "type": "text/javascript"
            }
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:5003"
      }
    ]
  }
  